# Coinbase Pro API Keys
COINBASE_API_NAME=API NAME
COINBASE_API_KEY=PRIVATE KEY

# Trading Configuration
TRADING_MODE=test  # Options: test, paper, live
TRADING_PAIR=BTC-USD
CANDLE_INTERVAL=1m  # Options: 1m, 5m, 15m, 1h, 4h, 1d
ORDER_TYPE=market  # Options: market, limit

# Risk Management
MAX_POSITION_SIZE=0.1  # Maximum position size as percentage of portfolio
STOP_LOSS_PERCENTAGE=2.0  # Stop loss percentage
TAKE_PROFIT_PERCENTAGE=5.0  # Take profit percentage
MIN_ORDER_SIZE=10  # Minimum order size in USD
COOLDOWN_PERIOD=300  # Cooldown period in seconds between trades

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=trading_bot.log

# Data Collection
WEBSOCKET_ENABLED=true  # Use WebSocket for real-time data
DATA_FETCH_INTERVAL=60  # Fallback REST API fetch interval in seconds

